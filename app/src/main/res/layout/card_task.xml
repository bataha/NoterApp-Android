<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_height="80dp"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:padding="16dp"
    card_view:cardCornerRadius="4dp"
    android:elevation="6dp"
    android:layout_gravity="center"
    style="?attr/cardStyle"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toDoListItemColorImageView"
            android:gravity="center"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            style="@android:style/TextAppearance.Medium"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_alignTop="@id/toDoListItemColorImageView"
            android:layout_toRightOf="@id/toDoListItemColorImageView"
            android:layout_toEndOf="@id/toDoListItemColorImageView"
            android:text="Task title"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="3dp" />

        <TextView
            style="@android:style/TextAppearance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text2"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="10dp"
            android:layout_alignStart="@id/text1"
            android:layout_alignLeft="@id/text1"
            android:layout_below="@id/text1"
            android:layout_marginTop="-22dp"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:text="Task notes"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Reminder date"
            android:id="@+id/reminderDate"
            android:textColor="@color/orange200"
            android:layout_alignTop="@+id/text1"
            android:layout_toRightOf="@+id/text1"
            android:layout_toEndOf="@+id/text1"
            android:layout_marginTop="12dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
